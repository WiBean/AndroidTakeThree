<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:foregroundGravity="fill_vertical"
    tools:context="com.jmnow.wibeantakethree.brewingprograms.TakeControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:labelFor="@+id/et_deviceId"
                android:text="@string/label_device_id" />

            <Button
                android:id="@+id/btn_scanDeviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_deviceId"
                android:layout_toRightOf="@+id/tv_deviceId"
                android:text="Scan" />

            <EditText
                android:id="@+id/et_deviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_deviceId"
                android:maxLength="128" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_accessToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:labelFor="@+id/et_accessToken"
                android:text="@string/label_accessToken" />

            <Button
                android:id="@+id/btn_scanAccessToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_accessToken"
                android:layout_toRightOf="@+id/tv_accessToken"
                android:text="Scan" />

            <EditText
                android:id="@+id/et_accessToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_accessToken"
                android:maxLength="128" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/et_goalTemperature"
                android:text="@string/label_goalTemperature" />

            <EditText
                android:id="@id/et_goalTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_goal_temperature"
                android:maxLength="3"
                android:minWidth="80sp"
                android:singleLine="true"
                android:text="95" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_testCredentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/action_testCredentials" />

    </LinearLayout>


</FrameLayout>
